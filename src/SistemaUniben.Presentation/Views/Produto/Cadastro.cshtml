
@{
	ViewBag.Title = "Cadastro de Produto";
}


<ol class="breadcrumb">
	<li><a href="/Home/Index">Principal</a></li>
	<li class="active">Cadastro de Produto</li>
</ol>



<div class="container" style="margin-top:20px;">

	<div class="row">
		<div class="widget widget-gray">
			<!-- TYPE PANEL -->
			<div class="widget-head">
				<!-- HEAD PANEL -->
				<h4 class="heading"><i class="fa fa-archive"></i> Cadastro de Produto</h4>
			</div><!-- /HEAD PANEL -->

			<div class="widget-body" id="widget-body1">
				<!-- CONTENT PANEL -->

				<h4>Dados cadastrais</h4>
				<hr class="style4" />

				<form>


					<div class="form-group col-md-6">
						<label for="nome">Nome</label>
						<input type="text" class="form-control " id="nome" placeholder="Nome do produto">
					</div>

					<div class="form-group col-md-3">
						<label for="termo">Termo</label>
						<input type="text" class="form-control " id="termo" placeholder="Termo">
					</div>

					<div class="form-group col-md-3">
						<label for="modalidade">Modalidade</label>
						<input type="text" class="form-control " id="modalidade" placeholder="Modalidade">
					</div>

					<div class="form-group col-md-3">
						<label for="datareajuste">Data Reajuste</label>
						<input type="text" class="form-control data" id="datareajuste" placeholder="Data Reajuste">
					</div>


					<div class="form-group col-md-3">
						<label for="reajusteoperadora">Reajuste Operadora</label>
						<input type="text" class="form-control" id="reajusteoperadora" placeholder="Reajuste Operadora">
					</div>

					<div class="form-group col-md-6">
						<label for="banco">Operadora</label>
						<select class="custom-select form-control decorated " id="operadora">
							<option selected>Escolha uma opção</option>
							<option value="1">teste</option>
							<option value="2">teste</option>
						</select>
					</div>

					<div class="form-group col-md-3 offset-md-9">
						<label for="valor">Valor</label>
						<input type="text" class="form-control" id="valor" placeholder="Valor">
					</div>


					<hr class="style4">

					<div class="form-group col-md-12">
						<label for="obs">Observação </label>
						<textarea class="form-control" rows="5" id="obs"></textarea>
					</div>


					<hr class="style4">

					<div class="col-md-3 offset-md-6">
						<button type="button" class="btn btn-primary btn-sm " data-toggle="modal" data-target="#modal">
							Salvar cadastro
						</button>
					</div>

				</form>

				<span class="clear"></span>

			</div><!-- /CONTENT PANEL -->

			<div class="widget-footer">
				<!-- FOOTER PANEL-->
				<a href="#" id="toggle1" class="fa fa-chevron-up fa-1x" title=""><i></i></a>
			</div><!-- /FOOTER PANEL-->

		</div> <!-- /TYPE PANEL -->

	</div>
</div>